<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="8dp"
    android:id="@+id/cardView"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fromName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Ashish Gupta"
            android:textStyle="bold"
            android:singleLine="true"
            android:textColor="@color/purple_500"
            android:padding="10dp"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:singleLine="true"
            android:src="@drawable/arrow"
            android:layout_toRightOf="@+id/fromName" />

        <TextView
            android:id="@+id/toName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:padding="10dp"
            android:singleLine="true"
            android:text="Ayush Singh"
            android:layout_toRightOf="@+id/arrow"
            android:textColor="@color/purple_500"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:padding="10dp"
            android:singleLine="true"
            android:text="06-05-21,02:19PM"
            android:layout_below="@+id/fromName"
            android:textColor="?attr/colorControlNormal"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/transferAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:padding="10dp"
            android:singleLine="true"
            android:text="Rs. 10000 /-"
            android:layout_alignParentRight="true"
            android:textColor="?attr/colorControlNormal"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/transferStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:padding="10dp"
            android:singleLine="true"
            android:text="Successful"
            android:layout_below="@+id/transferAmount"
            android:layout_alignParentRight="true"
            android:textColor="?attr/colorControlNormal"
            android:textSize="15sp"
            android:textStyle="bold" />





    </RelativeLayout>



</androidx.cardview.widget.CardView>